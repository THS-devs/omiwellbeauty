{% style %}
  :root {
    --font-body-family: "Manrope", sans-serif;;
    --font-body-style: normal;
    --font-body-weight: 400;
    --font-body-weight-bold: 700;

    --font-heading-family: "Cormorant Infant", serif;
    --font-heading-style: normal;
    --font-heading-weight: 400;

    --primary-color: {{ settings.primary_color }};
    --primary-color-light: {{ settings.primary_color_light }};
    --primary-color-light2: {{ settings.primary_color_light_2 }};

    --secondary-color: {{ settings.secondary_color }};
    --secondary-color-dark: {{ settings.secondary_color_dark }};

    --background: {{ settings.background }};
    --background-dark: {{ settings.background_dark }};
  }
{% endstyle %}