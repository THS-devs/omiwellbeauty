        "info": "t:settings_schema.typography.settings.type_body_font.info"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#FFFAF2"
      },
      {
        "type": "color",
        "id": "background_dark",
        "label": "Background Dark",
        "default": "#F2EAE1"
