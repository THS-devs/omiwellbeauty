{% if section.settings.hide-announcement-bar == false %}
  <div class="announcement-bar" section_color="{{ section.settings.section-color }}">
    <div class="container-fluid lg">
      <p>Announcement</p>
    </div>
  </div>
{% endif %}
{% schema %}
{
  "name": "Announcement Bar",
  "class": "section-announcement-bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "hide-announcement-bar",
      "label": "Hide Announcement Bar"
    },
    {
      "type": "radio",
      "id": "section-color",
      "label": "Section Color",
      "options": [
        {
          "value": "Primary color",
          "label": "Primary color"
        },
        {
          "value": "Primary color 2",
          "label": "Primary color 2"
        },
        {
          "value": "Floral White",
          "label": "Floral White"
        },
        {
          "value": "Paper Lamb",
          "label": "Paper Lamb"
        },
        {
          "value": "Secondary",
          "label": "Secondary"
        }
      ],
      "default": "Primary color"
    }
  ]
}
{% endschema %}